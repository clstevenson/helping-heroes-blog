{{#if all}}
<h3 class="is-size-4 title">All Posts</h3>
{{else}}
<h3 class="is-size-4 title">Posts by {{username}}</h3>
{{/if}}
<div id="all-posts" class="m-2">
    <p class="m-1">Sort by:</p>
    <div class="columns m-1">
        <button class="sort button is-primary m-1" data-sort="title">Title</button>
        <button class="sort button is-primary m-1" data-sort="username">Username</button>
        <button class="sort button is-primary m-1" data-sort="date">Date</button>
        <input type="text" class="search input m-1" placeholder="Search" />
    </div>
    <ul class="list">
        {{#each output as |post|}}
        <li class="box m-1">
            <a href="/posts/{{post.id}}" class="mb-2 is-size-4">{{post.title}}</a>
            <p class="username">By {{post.user.username}}</p>
            <p class="mb-1">{{post.content}}</p>
            <p class="date mb-1">Posted on {{format_date post.date}}</p>
            <p class="mb-1">{{post.comments}} comments</p>
            <button class="button delete-post" data-id="{{post.id}}">Delete</button>
        </li>
        {{/each}}
    </ul>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/list.js/2.3.1/list.min.js"></script>
<script src="/js/adminPosts.js"> </script>
