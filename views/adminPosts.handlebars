{{#if all}}
<h3 class="is-size-4 title">All Posts</h3>
{{else}}
<h3 class="is-size-4 title">Posts by {{username}}</h3>
{{/if}}
{{#each output as |post|}}
<div class="box">
    <ul>
        <li class="mb-2 title is-size-5">{{post.title}}</li>
        <li class="mb-1">{{post.content}}</li>
        <li class="mb-1">Posted on {{format_date post.date}} by {{post.user.username}}</li>
        <li class="mb-1">{{post.comments}} comments</li>
    </ul>
    <button class="button delete-post" data-id="{{post.id}}">Delete</button>
</div>
{{/each}}
<script src="/js/adminPosts.js"> </script>
