<div class="edit-response-form">
    <div> 
        <h1>{{response.post.title}}</h1>
        <p>{{response.post.content}}</p>
        <div>
            {{content}}
        </div>
        <textarea name="response-content"></textarea>
    </div>

    <div>
        <button type="submit">Edit Response</button>
    </div>
    <div>
        <button class="delete-response-btn" data-id="{{response.id}}">DELETE RESPONSE</button>
    </div>
    
</div>

