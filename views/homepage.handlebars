<div class="columns">
<div class="column is-two-fifths">
{{#each tags}}
<a id="tag-filter">#{{name}}</a>
{{/each}}
</div>
<div class="column is-three fifths">
<h1>Recent Posts:</h1>
{{#each posts as |post|}}
<div>
<ul>
<li>
<h2>{{post.title}}</h2>
<p>{{post.content}}</p>
<p>Posted by {{post.user.username}}</p>
<p>Tags: #{{post.tag.name}}</p>
{{/each}}
</li>
</ul>
<li>
</li>
</div>
</div>