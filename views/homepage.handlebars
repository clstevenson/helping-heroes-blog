<div class="columns">
<div class="column is-two-fifths">
<h1>Filter by Tag Name</h1>
{{#each tags}}
<a id="tag-filter">#{{name}}</a>
{{/each}}
</div>
<div class="column is-three fifths">
<h1>Posts</h1>
<div id="postList">
{{#each posts as |post|}}
<div>
<ul>
<li>
<a href="/posts/{{post.id}}"><h2>{{post.title}}</h2></a>
<p>Posted by {{post.user.username}}</p>
<p>Created on {{format_date post.date}}</p>
<p>Tags:
    {{#each postTags}}
    {{#if (eq this.id post.id)}}
    {{#each tag as |tag|}}
    #{{tag}}
    {{/each}}
    {{/if}}
    {{/each}}
</p>
</li>
</ul>
</div>
{{/each}}
</div>
</div>
<script src="/js/homepage.js"></script>