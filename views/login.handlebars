
<div class="card mb-5">
<div class="card-content">
<div class="content m-5">
{{!-- Login Form --}}
<form class="login-form">
  <h1 class="has-text-centered"><strong class="has-text-danger-dark">Login</strong></h1>
  <div class="field">
    <label for="email-login"><strong>Username or Email</strong></label>
    <div class="control">
     <input class="input" type="text" id="email-login" placeholder="Username or Email"/>
    </div>
  </div>
  <div class="field">
    <label for="password-login"><strong>Password</strong></label>
    <div class="control">
      <input class="input" type="password" id="password-login" placeholder="Password"/>
    </div>
  </div>
  <div class="field">
    <div class="control">
    <button class="button has-text-info" type="submit">Login</button>
    </div>
  </div>
</form>

</div>
</div>
</div>

<div class="card my-5">
<div class="card-content">
<div class="content m-5">
{{!-- Create Account Form --}}
<form class="signup-form">
  <h1 class="has-text-centered"><strong class="has-text-danger-dark">Create Account</strong></h1>
  <div class="field">
    <label for="username-signup"><strong>Username</strong></label>
     <div class="control">
    <input class="input" type="text" id="username-signup" placeholder="Enter Username"/>
    </div>
  </div>
  <div class="field">
    <label for="email-signup"><strong>Email</strong></label>
    <div class="control">
      <input class="input" type="text" id="email-signup" placeholder="Enter Email Address"/>
    </div>
  </div>
  <div class="field">
    <label for="password-signup"><strong>Password</strong></label>
       <div class="control">
      <input class="input" type="password" id="password-signup" placeholder="Create Password - Must be at least 8 characters"/>
    </div>
  </div>
  <div class="field">
    <div class="control">
       <button class="button has-text-info" type="btn submit">Create Account</button>
    </div>
  </div>
</form>

</div>
</div>
</div>


<script src="/js/login.js"></script>