<article>
    <a href="/dashboard">&larr; Back to Dashboard</a>
    <h2>Edit Post</h2>
    <form class="edit-post-form">
        <div>
            <input type="text" name="post-title" value="{{post.title}}" /> <!-- post.title in post model-->
            <br><br>
            <textarea id="post-text" name="post-text"></textarea>
            <p>{{post.content}}</p> <!-- post_text is in post model-->
        </div>
        <div>
            <a href="/post/{{post.id}}">{{post.content.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit">Save Post</button>
        <button type="button" class="delete-post-btn">Delete post</button>
    </form>
</article>